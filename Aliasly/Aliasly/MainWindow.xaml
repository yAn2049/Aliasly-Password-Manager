<Window x:Class="Aliasly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aliasly"
        mc:Ignorable="d"
        Title="Aliasly" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>

        <!-- Master Key Entry -->
        <Grid x:Name="mesterkulcs_felulet"
              Visibility="Collapsed">

            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <Label Content="Enter your master key"
                       FontSize="14"
                       Margin="5"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
                
                <PasswordBox x:Name="mesterkulcs_mezo"
                             FontSize="14"
                             Height="25" Width="300"
                             Margin="5"
                             HorizontalAlignment="Center"
                             VerticalContentAlignment="Center"/>

                <Button x:Name="enter_gomb"
                        FontSize="14"
                        Content="Enter"
                        Width="120"
                        Margin="5"
                        Click="enter_gomb_Click"/>

                <Button x:Name="uj_kulcs"
                        FontSize="14"
                        Content="Create new key"
                        Width="120"
                        Margin="5"
                        Click="uj_kulcs_Click"/>

            </StackPanel>

        </Grid>



        <!-- Client -->
        <DockPanel x:Name="kliens_felulet"
                   Visibility="Visible">

            <Grid>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">

                    <StackPanel VerticalAlignment="Center">

                        <Label Content="Password"
                               FontSize="14"/>
                        <PasswordBox x:Name="jelszo_mezo"
                                     FontSize="14"
                                     Width="100" Height="25"
                                     Margin="5,0,5,0"
                                     VerticalContentAlignment="Center"
                                     PasswordChanged="jelszo_mezo_PasswordChanged"/>
                        
                    </StackPanel>

                    <StackPanel VerticalAlignment="Center">

                        <Label Content="Name"
                               FontSize="14"/>
                        <TextBox x:Name="nev_mezo"
                                 FontSize="14"
                                 Width="100" Height="25"
                                 Margin="5,0,5,0"
                                 VerticalContentAlignment="Center"/>

                    </StackPanel>

                    <StackPanel VerticalAlignment="Center">

                        <Label Content="E-Mail"
                               FontSize="14"/>
                        <TextBox x:Name="eMail_mezo"
                                 FontSize="14"
                                 Width="100" Height="25"
                                 Margin="5,0,5,0"
                                 VerticalContentAlignment="Center"/>

                    </StackPanel>

                    <StackPanel VerticalAlignment="Center">

                        <Label Content="Url"
                               FontSize="14"/>
                        <TextBox x:Name="url_mezo"
                                 FontSize="14"
                                 Width="100" Height="25"
                                 Margin="5,0,5,0"
                                 VerticalContentAlignment="Center"/>

                    </StackPanel>

                    <StackPanel VerticalAlignment="Center">

                        <Label Content="Description"
                               FontSize="14"/>
                        <TextBox x:Name="hozzafuzes_mezo"
                                 FontSize="14"
                                 Width="100" Height="25"
                                 Margin="5,0,5,0"
                                 VerticalContentAlignment="Center"/>

                    </StackPanel>

                    <StackPanel VerticalAlignment="Center">

                        <Label Content="Send data"
                               FontSize="14"
                               HorizontalContentAlignment="Center"/>
                        <Button x:Name="felhasznalo_rogzites_gomb"
                                FontSize="14"
                                Content="Send"
                                Width="100" Height="25"
                                Margin="5,0,5,0"
                                Click="felhasznalo_rogzites_gomb_Click"
                                IsEnabled="False"/>
                        
                    </StackPanel>
                    

                </StackPanel>


                <StackPanel Grid.Row="1">

                    <StackPanel Orientation="Horizontal">

                        <Label Content="Id"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                        <Label Content="Password"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                        <Label Content="Name"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                        <Label Content="E-Mail"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                        <Label Content="Url"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                        <Label Content="Description"
                               FontSize="14"
                               VerticalAlignment="Center"/>

                    </StackPanel>

                    <ListBox x:Name="felhasznalok_lista">

                        <ListBox.ItemTemplate>

                            <DataTemplate>

                                <StackPanel Orientation="Horizontal">

                                    <Label Content="{Binding JelszoId}"
                                           FontSize="14"/>
                                    <Label Content="{Binding JelszoString}"
                                           FontSize="14"/>
                                    <Label Content="{Binding Nev}"
                                           FontSize="14"/>
                                    <Label Content="{Binding EMail}"
                                           FontSize="14"/>
                                    <Label Content="{Binding Url}"
                                           FontSize="14"/>
                                    <Label Content="{Binding Hozzafuzes}"
                                           FontSize="14"/>

                                </StackPanel>

                            </DataTemplate>

                        </ListBox.ItemTemplate>

                    </ListBox>

                </StackPanel>

            </Grid>

        </DockPanel>

    </Grid>
    
</Window>
